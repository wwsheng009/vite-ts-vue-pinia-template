{
  "compilerOptions": {
    "types": [
      "vite/client"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "vite.config.ts",
    "build/vite/**/*.ts",
    "build/vite/**/*.d.ts",
    "build/config/**/*.ts",
    "build/config/**/*.d.ts",
  ]
}